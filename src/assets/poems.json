[
    {
        "title": "石灰吟",
        "author": "明•于谦",
        "image": "poems-石灰吟.jpg",
        "paragraphs": [
            "千锤万凿出深山，",
            "烈火焚烧若等闲。",
            "粉身碎骨全不怕，",
            "要留清白在人间"
        ]
    },
    {
        "title": "所见",
        "author": "清•袁枚",
        "image": "poems-所见.jpg",
        "paragraphs": [
            "牧童骑黄牛，",
            "歌声振林樾。",
            "意欲捕鸣蝉，",
            "忽然闭口立。"
        ]
    },
    {
        "title": "己亥杂诗",
        "author": "清 龚自珍",
        "image": "poems-己亥杂诗.jpg",
        "paragraphs": [
            "九州生气恃风雷，",
            "万马齐喑究可哀。",
            "我劝天公重抖擞，",
            "不拘一格降人才。"
        ]
    },
    {
        "title": "竹石",
        "author": "清•郑燮",
        "image": "poems-竹石.jpg",
        "paragraphs": [
            "咬定青山不放松，",
            "立根原在破岩中。",
            "千磨万击还坚劲，",
            "任尔东西南北风。"
        ]
    },
    {
        "title": "题西林壁",
        "author": "宋•苏轼",
        "image": "poems-题西林壁.jpg",
        "paragraphs": [
            "横看成岭侧成峰，",
            "远近高低各不同。",
            "不识庐山真面目，",
            "只缘身在此山中。"
        ]
    },
    {
        "title": "三衢道中",
        "author": "宋 曾几",
        "image": "poems-三衢道中.jpg",
        "paragraphs": [
            "梅子黄时日日晴，",
            "小溪泛尽却山行。",
            "绿阴不减来时路，",
            "添得黄鹂四五声。"
        ]
    },
    {
        "title": "示儿",
        "author": "宋 陆游",
        "image": "poems-示儿.jpg",
        "paragraphs": [
            "死去元知万事空，",
            "但悲不见九州同。",
            "王师北定中原日，",
            "家祭无忘告乃翁。"
        ]
    },
    {
        "title": "秋夜将晓出篱门迎凉有感",
        "author": "宋•陆游",
        "image": "poems-秋夜将晓出篱门迎凉有感.jpg",
        "paragraphs": [
            "三万里河东入海，",
            "五千仞岳上摩天。",
            "遗民泪尽胡尘里，",
            "南望王师又一年。"
        ]
    },
    {
        "title": "四时田园杂兴（其一）",
        "author": "宋 范成大",
        "image": "poems-四时田园杂兴（其一）.jpg",
        "paragraphs": [
            "昼出耘田夜绩麻，",
            "村庄儿女各当家。",
            "童孙未解供耕织，",
            "也傍桑阴学种瓜。"
        ]
    },
    {
        "title": "四时田园杂兴（其二）",
        "author": "宋 范成大",
        "image": "poems-四时田园杂兴（其二）.jpg",
        "paragraphs": [
            "梅子金黄杏子肥，",
            "麦花雪白菜花稀。",
            "日长篱落无人过，",
            "唯有蜻蜓蛱蝶飞。"
        ]
    },
    {
        "title": "春日",
        "author": "宋 朱熹",
        "image": "poems-春日.jpg",
        "paragraphs": [
            "胜日寻芳泗水滨，",
            "无边光景一时新。",
            "等闲识得东风面，",
            "万紫千红总是春。"
        ]
    },
    {
        "title": "题临安邸",
        "author": "宋 林升",
        "image": "poems-题临安邸.jpg",
        "paragraphs": [
            "山外青山楼外楼，",
            "西湖歌舞几时休？",
            "暖风熏得游人醉，",
            "直把杭州作汴州。"
        ]
    },
    {
        "title": "游园不值",
        "author": "宋⋅叶绍翁",
        "image": "poems-游园不值.jpg",
        "paragraphs": [
            "应怜屐齿印苍苔，",
            "小扣柴扉久不开。",
            "春色满园关不住，",
            "一枝红杏出墙来。"
        ]
    },
    {
        "title": "观书有感",
        "author": "宋•朱熹",
        "image": "poems-观书有感.jpg",
        "paragraphs": [
            "半亩方塘一鉴开，",
            "天光云影共徘徊。",
            "问渠那得清如许？",
            "为有源头活水来。"
        ]
    },
    {
        "title": "乡村四月",
        "author": "宋 翁卷",
        "image": "poems-乡村四月.jpg",
        "paragraphs": [
            "绿遍山原白满川，",
            "子规声里雨如烟。",
            "乡村四月闲人少，",
            "才了蚕桑又插田。"
        ]
    },
    {
        "title": "墨梅",
        "author": "元 王冕",
        "image": "poems-墨梅.jpg",
        "paragraphs": [
            "我家洗砚池头树，",
            "朵朵花开淡墨痕。",
            "不要人夸好颜色，",
            "只留清气满乾坤。"
        ]
    },
    {
        "title": "塞下曲",
        "author": "唐 卢纶",
        "image": "poems-塞下曲.jpg",
        "paragraphs": [
            "月黑雁飞高，",
            "单于夜遁逃。",
            "欲将轻骑逐，",
            "大雪满弓刀。"
        ]
    },
    {
        "title": "忆江南",
        "author": "唐 白居易",
        "image": "poems-忆江南.jpg",
        "paragraphs": [
            "江南好，",
            "风景旧曾谙。",
            "日出江花红胜火，",
            "春来江水绿如蓝。",
            "能不忆江南？"
        ]
    },
    {
        "title": "江南春",
        "author": "唐 杜牧",
        "image": "poems-江南春.jpg",
        "paragraphs": [
            "千里莺啼绿映红，",
            "水村山郭酒旗风。",
            "南朝四百八十寺，",
            "多少楼台烟雨中。"
        ]
    },
    {
        "title": "蜂",
        "author": "唐 罗隐",
        "image": "poems-蜂.jpg",
        "paragraphs": [
            "不论平地与山尖，",
            "无限风光尽被占。",
            "采得百花成蜜后，",
            "为谁辛苦为谁甜。"
        ]
    },
    {
        "title": "江上渔者",
        "author": "宋•范仲淹",
        "image": "poems-江上渔者.jpg",
        "paragraphs": [
            "江上往来人，",
            "但爱鲈鱼美。",
            "君看一叶舟，",
            "出没风波里。"
        ]
    },
    {
        "title": "夏日绝句",
        "author": "宋 李清照",
        "image": "poems-夏日绝句.jpg",
        "paragraphs": [
            "生当作人杰，",
            "死亦为鬼雄。",
            "至今思项羽，",
            "不肯过江东。"
        ]
    },
    {
        "title": "元日",
        "author": "宋•王安石",
        "image": "poems-元日.jpg",
        "paragraphs": [
            "爆竹声中一岁除，",
            "春风送暖入屠苏。",
            "千门万户瞳瞳日，",
            "总把新桃换旧符。"
        ]
    },
    {
        "title": "泊船瓜洲",
        "author": "宋•王安石",
        "image": "poems-泊船瓜洲.jpg",
        "paragraphs": [
            "京口瓜洲一水间，",
            "钟山只隔数重山。",
            "春风又绿江南岸，",
            "明月何时照我还。"
        ]
    },
    {
        "title": "书湖阴先生壁",
        "author": "宋 王安石",
        "image": "poems-书湖阴先生壁.jpg",
        "paragraphs": [
            "茅檐长扫净无苔，",
            "花木成畦手自栽。",
            "一水护田将绿绕，",
            "两山排闼送青来。"
        ]
    },
    {
        "title": "六月二十七日望湖楼醉书",
        "author": "宋 苏轼",
        "image": "poems-六月二十七日望湖楼醉书.jpg",
        "paragraphs": [
            "黑云翻墨未遮山，",
            "白雨跳珠乱入船。",
            "卷地风来忽吹散，",
            "望湖楼下水如天。"
        ]
    },
    {
        "title": "饮湖上初晴天后雨",
        "author": "宋 苏轼",
        "image": "poems-饮湖上初睛后雨.jpg",
        "paragraphs": [
            "水光潋滟晴方好，",
            "山色空蒙雨亦奇。",
            "欲把西湖比西子，",
            "淡妆浓抹总相宜。"
        ]
    },
    {
        "title": "惠崇春江晚景",
        "author": "宋•苏轼",
        "image": "poems-惠崇春江晚景.jpg",
        "paragraphs": [
            "竹外桃花三两枝，",
            "春江水暖鸭先知。",
            "蒌蒿满地芦芽短，",
            "正是河豚欲上时。"
        ]
    },
    {
        "title": "别董大",
        "author": "唐 高适",
        "image": "poems-别董大.jpg",
        "paragraphs": [
            "千里黄云白日曛，",
            "北风吹雁雪纷纷。",
            "莫愁前路无知己，",
            "天下谁人不识君？"
        ]
    },
    {
        "title": "绝句",
        "author": "唐 杜甫",
        "image": "poems-绝句.jpg",
        "paragraphs": [
            "两个黄鹂鸣翠柳，",
            "一行白鹭上青天。",
            "窗含西岭千秋雪，",
            "门泊东吴万里船。"
        ]
    },
    {
        "title": "江畔独步寻花",
        "author": "唐 杜甫",
        "image": "poems-江畔独步寻花.jpg",
        "paragraphs": [
            "黄师塔前江水东，",
            "春光懒困倚微风。",
            "桃花一簇开无主，",
            "可爱深红爱浅红？"
        ]
    },
    {
        "title": "游子吟",
        "author": "唐•孟郊",
        "image": "poems-游子吟.jpg",
        "paragraphs": [
            "慈母手中线，",
            "游子身上衣。",
            "临行密密缝，",
            "意恐迟迟归。",
            "谁言寸草心，",
            "报得三春晖。"
        ]
    },
    {
        "title": "山行",
        "author": "唐 杜牧",
        "image": "poems-山行.jpg",
        "paragraphs": [
            "远上寒山石径斜，",
            "白云生处有人家。",
            "停车坐爱枫林晚，",
            "霜叶红于二月花。"
        ]
    },
    {
        "title": "清明",
        "author": "唐•杜牧",
        "image": "poems-清明.jpg",
        "paragraphs": [
            "清明时节雨纷纷，",
            "路上行人欲断魂。",
            "借问酒家何处有，",
            "牧童遥指杏花村。"
        ]
    },
    {
        "title": "早春呈水部张十八员外",
        "author": "唐 韩愈",
        "image": "poems-早春呈水部张十八员外.jpg",
        "paragraphs": [
            "天街小雨润如酥，",
            "草色遥看近却无。",
            "最是一年春好处，",
            "绝胜烟柳满皇都。"
        ]
    },
    {
        "title": "渔歌子",
        "author": "唐 张志和",
        "image": "poems-渔歌子.jpg",
        "paragraphs": [
            "西塞山前白鹭飞，",
            "桃花流水鳜鱼肥。",
            "青箬笠，绿蓑衣，",
            "斜风细雨不须归。"
        ]
    },
    {
        "title": "望洞庭",
        "author": "唐•刘禹锡",
        "image": "poems-望洞庭.jpg",
        "paragraphs": [
            "湖光秋月两相和，",
            "潭面无风镜未磨。",
            "遥望洞庭山水翠，",
            "白银盘里一青螺。"
        ]
    },
    {
        "title": "浪淘沙",
        "author": "唐•刘禹锡",
        "image": "poems-浪淘沙.jpg",
        "paragraphs": [
            "九曲黄河万里沙，",
            "浪淘风簸自天涯。",
            "如今直上银河去，",
            "同到牵牛织女家。"
        ]
    },
    {
        "title": "枫桥夜泊",
        "author": "唐•张继",
        "image": "poems-枫桥夜泊.jpg",
        "paragraphs": [
            "月落乌啼霜满天，",
            "江枫渔火对愁眠。",
            "姑苏城外寒山寺，",
            "夜半钟声到客船。"
        ]
    },
    {
        "title": "滁州西涧",
        "author": "唐•韦应物",
        "image": "poems-滁州西涧.jpg",
        "paragraphs": [
            "独怜幽草涧边生，",
            "上有黄鹂深树鸣。",
            "春潮带雨晚来急，",
            "野渡无人舟自横。"
        ]
    },
    {
        "title": "芙蓉楼送辛渐",
        "author": "唐 王昌龄",
        "image": "poems-芙蓉楼送辛渐.jpg",
        "paragraphs": [
            "寒雨连江夜入吴，",
            "平明送客楚山孤。",
            "洛阳亲友如相问，",
            "一片冰心在玉壶。"
        ]
    },
    {
        "title": "回乡偶书",
        "author": "唐 贺知章",
        "image": "poems-回乡偶书.jpg",
        "paragraphs": [
            "少小离家老大回，",
            "乡音无改鬓毛衰。",
            "儿童相见不相识，",
            "笑问客从何处来。"
        ]
    },
    {
        "title": "凉州词",
        "author": "唐 王之涣",
        "image": "poems-凉州词.jpg",
        "paragraphs": [
            "黄河远上白云间，",
            "一片孤城万仞山。",
            "羌笛何须怨杨柳，",
            "春风不度玉门关。"
        ]
    },
    {
        "title": "鹿柴",
        "author": "唐•王维",
        "image": "poems-鹿柴.jpg",
        "paragraphs": [
            "空山不见人，",
            "但闻人语响。",
            "返景入深林，",
            "复照青苔上。"
        ]
    },
    {
        "title": "送元二使安西",
        "author": "唐 王维",
        "image": "poems-送元二使安西.jpg",
        "paragraphs": [
            "渭城朝雨浥轻尘，",
            "客舍青青柳色新。",
            "劝君更尽一杯酒，",
            "西出阳关无故人。"
        ]
    },
    {
        "title": "九月九日忆山东兄弟",
        "author": "唐 王维",
        "image": "poems-九月九日忆山东兄弟.jpg",
        "paragraphs": [
            "独在异乡为异客，",
            "每逢佳节倍思亲。",
            "遥知兄弟登高处，",
            "遍插茱萸少一人。"
        ]
    },
    {
        "title": "春夜喜雨",
        "author": "唐 杜甫",
        "image": "poems-春夜喜雨.jpg",
        "paragraphs": [
            "好雨知时节，",
            "当春乃发生。",
            "随风潜入夜，",
            "润物细无声。",
            "野径云俱黑，",
            "江船火独明。",
            "晓看红湿处，",
            "花重锦官城。"
        ]
    },
    {
        "title": "绝句",
        "author": "唐 杜甫",
        "image": "poems-迟日江山丽.jpg",
        "paragraphs": [
            "迟日江山丽，",
            "春风花草香。",
            "泥融飞燕子，",
            "沙暖睡鸳鸯。"
        ]
    },
    {
        "title": "黄鹳楼送孟浩然之广陵",
        "author": "唐 李白",
        "image": "poems-黄鹳楼送孟浩然之广陵.jpg",
        "paragraphs": [
            "故人西辞黄鹤楼，",
            "烟花三月下扬州。",
            "孤帆远影碧空尽，",
            "唯见长江天际流。"
        ]
    },
    {
        "title": "早发白帝城",
        "author": "唐 李白",
        "image": "poems-早发白帝城.jpg",
        "paragraphs": [
            "朝辞白帝彩云间，",
            "千里江陵一日还。",
            "两岸猿声啼不住，",
            "轻舟过万重山。"
        ]
    },
    {
        "title": "望天门山",
        "author": "唐 李白",
        "image": "poems-望天门山.jpg",
        "paragraphs": [
            "天门中断楚江开，",
            "碧水东流至此回。",
            "两岸青山相对出，",
            "孤帆一片日边来。"
        ]
    },
    {
        "title": "赋得古原草送别",
        "author": "唐•白居易",
        "image": "poems-赋得古原草送别.jpg",
        "paragraphs": [
            "离离原上草，",
            "一岁一枯荣。",
            "野火烧不尽，",
            "春风吹又生。",
            "远芳侵古道，",
            "晴翠接荒城。",
            "又送王孙去，",
            "萋萋满别情。"
        ]
    },
    {
        "title": "晓出净慈寺送林子方",
        "author": "宋•杨万里",
        "image": "poems-晓出净慈寺送林子方.jpg",
        "paragraphs": [
            "毕竟西湖六月中，",
            "风光不与四时同。",
            "接天莲叶无穷碧，",
            "映日荷花别样红。"
        ]
    },
    {
        "title": "悯农（其一）",
        "author": "唐 李绅",
        "image": "poems-春种一粒栗.jpg",
        "paragraphs": [
            "春种一粒粟，",
            "秋收万颗子。",
            "四海无闲田，",
            "农夫犹饿死。"
        ]
    },
    {
        "title": "舟夜书所见",
        "author": "清•查慎行",
        "image": "poems-舟夜书所见.jpg",
        "paragraphs": [
            "月黑见渔灯，",
            "孤光一点萤。",
            "微微风簇浪，",
            "散作满河星。"
        ]
    },
    {
        "title": "长歌行",
        "author": "汉乐府",
        "image": "poems-长歌行.jpg",
        "paragraphs": [
            "青青园中葵，",
            "朝露待日晞。",
            "阳春布德泽，",
            "万物生光辉。",
            "常恐秋节至，",
            "焜黄华叶衰。",
            "百川东到海，",
            "何时复西归。",
            "少壮不努力，",
            "老大徒伤悲。"
        ]
    },
    {
        "title": "凉州词",
        "author": "唐 王翰",
        "image": "poems-葡萄美酒夜光杯.jpg",
        "paragraphs": [
            "葡萄美酒夜光杯，",
            "欲饮琵琶马上催。",
            "醉卧沙场君莫笑，",
            "古来征战几人回？"
        ]
    },
    {
        "title": "出塞",
        "author": "唐 王昌龄",
        "image": "poems-出塞.jpg",
        "paragraphs": [
            "秦时明月汉时关，",
            "万里长征人未还。",
            "但使龙城飞将在，",
            "不教胡马度阴山。"
        ]
    },
    {
        "title": "小池",
        "author": "宋 杨万里",
        "image": "poems-小池.jpg",
        "paragraphs": [
            "泉眼无声惜细流，",
            "树阴照水爱晴柔。",
            "小荷才露尖尖角，",
            "早有蜻蜓立上头。"
        ]
    },
    {
        "title": "画鸡",
        "author": "明 唐寅",
        "image": "poems-画鸡.jpg",
        "paragraphs": [
            "头上红冠不用裁，",
            "满身雪白走将来。",
            "平生不敢轻言语，",
            "一叫千门万户开。"
        ]
    },
    {
        "title": "梅花",
        "author": "宋•王安石",
        "image": "poems-梅花.jpg",
        "paragraphs": [
            "墙角数枝梅，",
            "凌寒独自开。",
            "遥知不是雪，",
            "为有暗香来。"
        ]
    },
    {
        "title": "小儿垂钓",
        "author": "唐•胡令能",
        "image": "poems-小儿垂钓.jpg",
        "paragraphs": [
            "蓬头稚子学垂纶，",
            "侧坐莓苔草映身。",
            "路人借问遥招手，",
            "怕得鱼惊不应人。"
        ]
    },
    {
        "title": "登鹳雀楼",
        "author": "唐•王之涣",
        "image": "poems-登鹳雀楼.jpg",
        "paragraphs": [
            "白日依山尽，",
            "黄河入海流。",
            "欲穷千里目，",
            "更上一层楼。"
        ]
    },
    {
        "title": "望庐山瀑布",
        "author": "唐 李白",
        "image": "poems-望庐山瀑布.jpg",
        "paragraphs": [
            "日照香炉生紫烟，",
            "遥看瀑布挂前川。",
            "飞流直下三千尺，",
            "疑是银河落九天。"
        ]
    },
    {
        "title": "江雪",
        "author": "唐•柳宗元",
        "image": "poems-江雪.jpg",
        "paragraphs": [
            "千山鸟飞绝，",
            "万径人踪灭。",
            "孤舟蓑笠翁，",
            "独钓寒江雪。"
        ]
    },
    {
        "title": "夜宿山寺",
        "author": "唐 李白",
        "image": "poems-夜宿山寺.jpg",
        "paragraphs": [
            "危楼高百尺，",
            "手可摘星辰。",
            "不敢高声语，",
            "恐惊天上人。"
        ]
    },
    {
        "title": "敕勒歌",
        "author": "北朝民歌",
        "image": "poems-敕勒歌.jpg",
        "paragraphs": [
            "敕勒川，阴山下。",
            "天似穹庐，笼盖四野。",
            "天苍苍，野茫茫，",
            "风吹草低见牛羊。"
        ]
    },
    {
        "title": "村居",
        "author": "清 高鼎",
        "image": "poems-村居.jpg",
        "paragraphs": [
            "草长莺飞二月天，",
            "拂堤杨柳醉春烟。",
            "儿童散学归来早，",
            "忙趁东风放纸鸢。"
        ]
    },
    {
        "title": "咏柳",
        "author": "唐 贺知章",
        "image": "poems-咏柳.jpg",
        "paragraphs": [
            "碧玉妆成一树高，",
            "万条垂下绿丝绦。",
            "不知细叶谁裁出，",
            "二月春风似剪刀。"
        ]
    },
    {
        "title": "咏鹅",
        "author": "唐•骆宾王",  
        "image": "poems-咏鹅.jpg",
        "paragraphs": [
            "鹅，鹅，鹅，",
            "曲项向天歌。",
            "白毛浮绿水，",
            "红掌拨清波。"
        ]
    },
    {
        "title": "江南",
        "author": "汉乐府",
        "image": "poems-江南.jpg",
        "paragraphs": [
            "江南可采莲，",
            "莲叶何田田。",
            "鱼戏莲叶间。",
            "鱼戏莲叶东，",
            "鱼戏莲叶西，",
            "鱼戏莲叶南，",
            "鱼戏莲叶北。"
        ]
    },
    {
        "title": "画",
        "author": "唐 王维",
        "image": "poems-画.jpg",
        "paragraphs": [
            "远看山有色，",
            "近听水无声。",
            "春去花还在，",
            "人来鸟不惊。"
        ]
    },
    {
        "title": "悯农（其二）",
        "author": "唐 李绅",
        "image": "poems-锄禾日当午.jpg",
        "paragraphs": [
            "锄禾日当午，",
            "汗滴禾下土。",
            "谁知盘中餐，",
            "粒粒皆辛苦。"
        ]
    },
    {
        "title": "古朗月行",
        "author": "唐 李白",
        "image": "poems-古朗月行.jpg",
        "paragraphs": [
            "小时不识月，",
            "呼作白玉盘。",
            "又疑瑶台镜，",
            "飞在青云端。",
            "仙人垂两足，",
            "桂树何团团。",
            "白兔捣药成，",
            "问言与谁餐。"
        ]
    },
    {
        "title": "风",
        "author": "唐 李峤",
        "image": "poems-风.jpg",
        "paragraphs": [
            "解落三秋叶，",
            "能开二月花。",
            "过江千尺浪，",
            "入竹万竿斜。"
        ]
    },
    {
        "title": "春晓",
        "author": "唐 孟浩然",
        "image": "poems-春晓.jpg",
        "paragraphs": [
            "春眠不觉晓，",
            "处处闻啼鸟。",
            "夜来风雨声，",
            "花落知多少。"
        ]
    },
    {
        "title": "赠汪伦",
        "author": "唐•李白",
        "image": "poems-赠汪伦.jpg",
        "paragraphs": [
            "李白乘舟将欲行，",
            "忽闻岸上踏歌声。",
            "桃花潭水深千尺，",
            "不及汪伦送我情。"
        ]
    },
    {
        "title": "静夜思",
        "author": "唐 李白",
        "image": "poems-静夜思.jpg",
        "paragraphs": [
            "床前明月光，",
            "疑是地上霜。",
            "举头望明月，",
            "低头思故乡。"
        ]
    },
    {
        "title": "寻隐者不遇",
        "author": "唐•贾岛",
        "image": "poems-寻隐者不遇.jpg",
        "paragraphs": [
            "松下问童子，",
            "言师采药去。",
            "只在此山中，",
            "云深不知处。"
        ]
    },
    {
        "title": "池上",
        "author": "唐 白居易",
        "image": "poems-池上.jpg",
        "paragraphs": [
            "小娃撑小艇，",
            "偷采白莲回。",
            "不解藏踪迹，",
            "浮萍一道开。"
        ]
    }
]